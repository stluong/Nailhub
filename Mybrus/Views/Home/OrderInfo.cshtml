@using Mybrus.Language;

@{
    var sizes = (IEnumerable<int>)ViewBag.prdSize;
    sizes = sizes as IList<int> ?? new List<int>();
}

<div class='form-group form-group-sm mx-hgt200'>
    @if (sizes.Any())
    {
        <label>Size</label>
        <select id="ddlSize">
            @foreach (var size in sizes)
            {
                <option value="@size">@size</option>
            }
        </select>
    }
    <input id='chkBopCo' type='checkbox' value='Bop Co' />@BrusLang.Notice.CrimpingBrush
    <input id='txtEmail' type='text' placeholder='Email' class='form-control input-large' />

    <p class='help-block'>@BrusLang.Notice.Email</p>

    <label class='control-label checkbox'>@BrusLang.Notice.Shipping_Address</label>
    <textarea id='txtShipping' data-toggle="tooltip" title="@BrusLang.Notice.ShippingAddress" placeholder="@BrusLang.Notice.ShippingAddress" class='form-control input-large' />

    <label class='control-label'>
        @BrusLang.Notice.Shipping_Cost:
    </label>
    <label>@ViewBag.shpFee</label>
    <p class='help-block danger'>@BrusLang.Notice.ShippingCost</p>
</div>

