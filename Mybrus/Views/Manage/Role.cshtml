@model IEnumerable<TNT.Core.Model.Identity.ApplicationRole>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "RoleCreate")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "RoleEdit", new { id = item.Id }) |
                @Html.ActionLink("Details", "RoleDetails", new { id = item.Id }) |
                @Html.ActionLink("Delete", "RoleDelete", new { id = item.Id })
            </td>
        </tr>
    }

</table>