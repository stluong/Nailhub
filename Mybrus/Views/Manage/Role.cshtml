@model IEnumerable<TNT.Core.Model.Identity.ApplicationRole>

@{
    ViewBag.Title = "Role Management";
}
<div class="mt30l15r10">
    <h2 class="text-center">@ViewBag.Title</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "RoleEdit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "RoleDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "RoleDelete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
    <p>
        @Html.ActionLink("Create New", "RoleCreate", null, new { @class = "btn btn-success" })
    </p>
</div>
    
    
